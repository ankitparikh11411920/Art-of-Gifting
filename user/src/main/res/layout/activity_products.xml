<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context=".ProductsActivity">

    <include layout="@layout/user_toolbar"
        android:id="@+id/user_products_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:orientation="vertical"
        android:weightSum="10">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_recyclerview_prod_disp_products_activity"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_weight="9.3"
            android:visibility="visible"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnsort_activity_subcatprod"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/sortbtn"
            android:drawableLeft="@drawable/ic_sort"
            android:drawablePadding="8dp"
            android:text="Sort"
            android:textSize="18sp" />

    </LinearLayout>



</LinearLayout>