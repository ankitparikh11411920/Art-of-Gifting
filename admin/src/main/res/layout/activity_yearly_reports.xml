<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".YearlyReportsActivity">

    <include layout="@layout/admin_toolbar"
        android:id="@+id/admin_yearly_reports_toolbar"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="72dp"
        android:background="@drawable/custom_spinner"
        android:id="@+id/admin_spinner_select_year"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/admin_tv_total_product_yearly_reports"
        android:padding="16dp"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/admin_tv_total_amount_yearly_reports"
        android:padding="16dp"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"/>


</LinearLayout>