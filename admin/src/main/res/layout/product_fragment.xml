<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/admin_linear_btn_view_all"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_view_all"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:text="View All Products"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/admin_linear_btn_view_category"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_view_all"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:text="View Categories"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/admin_linear_btn_view_sub_category"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_view_all"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:text="View Sub-Category"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:id="@+id/admin_linear_btn_add_category"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_add"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:text="Add New Category"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/admin_linear_btn_add_sub_category"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_add"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:text="Add Sub-Category to existing Category"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/admin_linear_btn_add_new_product"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_add"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="4dp"
            android:paddingLeft="4dp"
            android:text="Add New Product"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorPrimaryDark"/>


</LinearLayout>