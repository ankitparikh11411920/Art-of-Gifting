<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".UsersWithMostBuysActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProductsWithAlmostOutOfStockActivity">

        <include
            android:id="@+id/admin_users_with_most_buys_toolbar"
            layout="@layout/admin_toolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_recycler_users_with_most_buys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>