<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GivenMonthActivity">

    <include layout="@layout/admin_toolbar"
        android:id="@+id/admin_given_month_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:text="Total Products Sold : "/>

    <TextView
        android:id="@+id/admin_given_month_totalproducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:text="Total Amount : "/>

    <TextView
        android:id="@+id/admin_given_month_totalamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorBlack" />

</LinearLayout>