<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingVertical="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Sort By"
        android:textColor="@color/colorwhite"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorwhite" />

    <RadioGroup
        android:id="@+id/sort_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/sort_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/sort_name_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/colorwhite"
            android:text=" (A-Z) Name"
            android:textColor="@color/colorwhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/sort_name_descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/colorwhite"
            android:text=" (Z-A) Name"
            android:textColor="@color/colorwhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/sort_price_lowtohigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/colorwhite"
            android:text=" Price : Low to High"
            android:textColor="@color/colorwhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/sort_price_hightolow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/colorwhite"
            android:text=" Price : High to Low"
            android:textColor="@color/colorwhite"
            android:textSize="17sp" />

    </RadioGroup>
</LinearLayout>